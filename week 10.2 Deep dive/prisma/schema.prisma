generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Model for User and todos 
model User{
  id            Int     @id @default(autoincrement())
  username      String  @unique
  firstname     String
  lastname      String
  // todo          Todos[]
}

model Todos{
  id            Int     @id @default(autoincrement())
  title         String  
  description   String?
  done          Boolean @default(false)
  // author          User    @relation(fields: [userId], references: [id])
  // userId        Int 
}
